{
    "build": { 
        "dockerfile": "Dockerfile" 
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        },
        "codespaces": {
            "repositories": {
                "devcontainers/features": {
                    "permissions": "write-all"
                }
            }
        }
    },
    "postCreateCommand": "git config --global --add safe.directory /workspaces/databricks-notebooks"
}